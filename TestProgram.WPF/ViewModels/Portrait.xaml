<UserControl x:Class="TestProgram.WPF.ViewModels.Portrait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TestProgram.WPF.ViewModels"
             mc:Ignorable="d" 
             Background="{DynamicResource PrimaryHueMidBrush}"
             Effect="{DynamicResource MaterialDesignShadowDepth2}"
             d:DesignHeight="56" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ToggleButton x:Name="btnMenu" Margin="16" Height="26" Width="26" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" Style="{StaticResource MaterialDesignHamburgerToggleButton}"/>
        </StackPanel>  
    </Grid>
</UserControl>
