<UserControl x:Name="MainParent" x:Class="KotStudentApp.Views.LoginWindows.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:KotStudentApp.Views.LoginWindows"
             mc:Ignorable="d" 
             MinHeight="500" MinWidth="100"
             MaxWidth="500" MaxHeight="100"
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="MainParent_Loaded">
    <Border CornerRadius="2" Background="{DynamicResource MaterialDesignPaper}">
        <Grid>
            <Grid x:Name="grdContent" Margin="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="/Images/web_hi_res_512.png" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Login" Grid.Row="1" FontSize="16" VerticalAlignment="Bottom" Margin="6"/>
                <TextBox x:Name="usernameBox" Grid.Row="2" material:HintAssist.Hint="Username" Margin="6" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <PasswordBox Grid.Row="3" Margin="6" material:HintAssist.Hint="Password" Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <Button Margin="6" Grid.Row="4">
                    <TextBlock Text="LOGIN"/>
                </Button>
                <Button x:Name="btnFacebookLogin" Grid.Row="5" Margin="6" Background="#3b5998" BorderBrush="#3b5998" Click="btnFacebookLogin_Click">
                    <TextBlock Text="FACEBOOK LOGIN"/>
                </Button>
            </Grid>
            <Grid x:Name="wbClient" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Height="56" Background="{DynamicResource PrimaryHueMidBrush}" VerticalAlignment="Top">
                </Grid>
                <WebBrowser x:Name="webBrowser" Grid.Row="1"/>
            </Grid>
            <Grid x:Name="grdProgressBar" Visibility="Collapsed" Opacity="0">
                <ProgressBar  Style="{DynamicResource MaterialDesignCircularProgressBar}" IsIndeterminate="True" Width="36" Height="36" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
