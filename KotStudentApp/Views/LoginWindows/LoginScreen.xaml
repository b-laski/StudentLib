<UserControl x:Class="KotStudentApp.Views.LoginWindows.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KotStudentApp.Views.LoginWindows"
             mc:Ignorable="d" 
             Background="{DynamicResource PrimaryHueDarkBrush}"
             Foreground=""
             MinHeight="500" MinWidth="400"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="28">
            <Label Content="Username:" Margin="0,56,0,0"/>
            <TextBox/>
            <Label Content="Password" Margin="0,56,0,0"/>
            <TextBox Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
