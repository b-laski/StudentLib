<UserControl x:Class="KotStudentApp.Views.MainControlWindows.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ProfileViewModel="clr-namespace:KotStudentApp.ViewModels"
             xmlns:local="clr-namespace:KotStudentApp.Views.MainControlWindows"
             mc:Ignorable="d"
             Background="{DynamicResource PrimaryHueMidBrush}"
             Effect="{DynamicResource MaterialDesignShadowDepth2}"
             d:DesignHeight="56" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" >
            <StackPanel HorizontalAlignment="Left">
                <ToggleButton x:Name="btnMenu" Margin="16" Height="26" Width="26" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" Style="{StaticResource MaterialDesignHamburgerToggleButton}" Click="btnMenu_Click"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="grdProfilPanel" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,8,0">
        </Grid>
    </Grid>
</UserControl>
